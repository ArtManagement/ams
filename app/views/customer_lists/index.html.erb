<%= form_tag("/customer_lists", method: "get") do %>
  <title><%= content_for?(:title) ? yield(:title) : "顧客台帳" %></title>
  <div class="container">
    <div class="col-lg-12">
      <table id="costomer_list"></table>
    </div>
    <div class="col-lg-4">
<p></P>
      <div class="form-group row">
        <%= label_tag 'costomer_lists[sort1]','並び替え：', :class => 'col-form-label col-lg-3 text-right text-danger' %>
        <%= select_tag 'costomer_lists[sort1]', options_from_collection_for_select(@sort, :sort_key, :sort), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
        <%= select_tag 'costomer_lists[sort2]', options_from_collection_for_select(@sort, :sort_key, :sort), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
        <%= select_tag 'costomer_lists[sort3]', options_from_collection_for_select(@sort, :sort_key, :sort), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
      </div>
    </div>
    <div class="col-lg-1">
    </div>
    <div class="col-lg-7">
<p></P>
      <div class="btn-toolber">
        <input class="btn btn-danger col-lg-2" id="costomer_list_seach" type="button" value="検索条件">
        <input class="btn btn-danger col-lg-2" id="costomer_list_slip" type="button" value="伝票修正">
        <input class="btn btn-danger col-lg-2" id="costomer_list_artwork" type="button" value="作品詳細">
        <input class="btn btn-danger col-lg-2" id="purcahse_list_print" type="button" value="印刷">
        <input class="btn btn-danger col-lg-2" id="costomer_list_close" type="button" value="閉じる" onClick="window.close()">
      </div>
    </div>
  </div>
<% end %>

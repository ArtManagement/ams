<div class="container">
  <div class="row">
    <%= f.fields_for :artwork do |a| %>
    <div class="col-lg-6">
<p></p>
      <div class="form-group row">
        <%= label_tag :images, '作品No：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_field :images, :artwork_no, :class => 'form-control col-lg-3', :readonly => true %>
      </div>
      <div class="form-group row">
        <%= label_tag :images, '作家：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_field :images, :artist, :class => 'form-control col-lg-8', :readonly => true%>
      </div>
      <div class="form-group row">
        <%= label_tag :images, 'タイトル：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_area :images, :title, :class => 'form-control col-lg-8', :readonly => true , rows: 2%>
      </div>
      <div class="form-group row">
        <%= label_tag :images, '分類/技法：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_field :images, :category, :class => 'form-control col-lg-3', :readonly => true %>
        <%= text_field :images, :technique, :class => 'form-control col-lg-5', :readonly => true %>
      </div>
      <div class="form-group row">
        <%= label_tag :images, '技法(その他)：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_field :images, :technique_etc, :class => 'form-control col-lg-8', :readonly => true %>
      </div>
      <div class="form-group row">
        <%= label_tag :images, '号数：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_field :images, :size, :class => 'form-control col-lg-8', :readonly => true %>
      </div>
      <div class="form-group row">
        <%= label_tag :images, '備考：', :class => 'col-form-label col-lg-3 text-right text-default' %>
        <%= text_area :images, :note, :class => 'form-control col-lg-8', :readonly => true , rows: 2%>
      </div>
    <% end %>
    </div>
    <div class="col-lg-3">
<p></p>
      <div class="form-group row">
        <%= f.label :image1, "1." %>
        <%= image_tag @image.image1.thumb.url if @image.image1? %>
      </div>
      <div class="form-group row">
        <%= f.file_field :image1 %>
        <%= f.hidden_field :image1_cache %>
      </div>
      <div class="form-group row">
        <%= f.label :image2, "2." %>
        <%= image_tag @image.image2.thumb.url if @image.image2? %>
      </div>
      <div class="form-group row">
        <%= f.file_field :image2 %>
        <%= f.hidden_field :image2_cache %>
      </div>
    </div>
    <div class="col-lg-3">
<p></p>
      <div class="form-group row">
        <%= f.label :image3, "3." %>
        <%= image_tag @image.image3.thumb.url if @image.image3? %>
      </div>
      <div class="form-group row">
        <%= f.file_field :image3 %>
        <%= f.hidden_field :image3_cache %>
      </div>
      <div class="form-group row">
        <%= f.label :image4, "4." %>
        <%= image_tag @image.image4.thumb.url if @image.image4? %>
      </div>
      <div class="form-group row">
        <%= f.file_field :image4 %>
        <%= f.hidden_field :image4_cache %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
    </div>
    <div class="col-lg-4">
      <div class="toolbar">
        <%= f.submit "　登録・更新　", data: { disable_with: "更新中..." } ,:class => "btn btn-primary" %>
        <input class="btn btn-primary" id="image_close" type="button" value="　　閉じる　　" onClick="window.close()">
      </div>
    </div>
  </div>
</div>

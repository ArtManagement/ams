<%= form_tag("/receivable_lists", method: "get") do %>
  <title><%= content_for?(:title) ? yield(:title) : "売掛台帳" %></title>
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
<p></p>
        <div class="form-group row">
          <%= label_tag :receivable_lists, '売上日:', :class => 'col-form-label col-lg-3 text-right text-primary' %>
          <%= text_field :receivable_lists, :date_from, :class => 'form-control date-picker text-center col-lg-4' %>
          <%= label_tag :receivable_lists, '〜', :class => 'col-form-label col-lg-1 text-primary' %>
          <%= text_field :receivable_lists, :date_to, :class => 'form-control date-picker text-center col-lg-4' %>
        </div>
      </div>
      <div class="col-lg-6">
<p></p>
        <div class="form-group row">
          <%= label_tag :receivable_lists, '売上先：', :class => 'col-form-label col-lg-2 text-right text-primary' %>
          <%= select_tag :receivable_lists_customer_id, options_from_collection_for_select(@customer, :id, :customer), {:class => 'form-control col-lg-10 select-id', :include_blank => true} %>
        </div>
      </div>
      <div class="col-lg-2">
<p></p>
        <div class="form-group row">
          <%= label_tag :receivable_lists, '状況：', :class => 'col-form-label col-lg-6 text-right text-primary' %>
          <%= select_tag :receivable_lists_status_id, options_for_select([['', 0],['売掛', 1],['入金済', 2]]), {:class => 'form-control col-lg-6 select-id'} %>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="form-group row">
          <%= label_tag :receivable_lists, '作家：', :class => 'col-form-label col-lg-3 text-right text-primary' %>
          <%= select_tag :receivable_lists_artist_id, options_from_collection_for_select(@artist, :id, :artist), {:class => 'form-control col-lg-9 select-id', :include_blank => true} %>
        </div>
        <div class="form-group row">
          <%= label_tag :receivable_lists, 'タイトル：', :class => 'col-form-label col-lg-3 text-right text-primary' %>
          <%= text_field :receivable_lists, :title, :class => 'form-control col-lg-9' %>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="form-group row">
          <%= label_tag :receivable_lists, '分類技法：', :class => 'col-form-label col-lg-3 text-right text-primary' %>
          <%= select_tag :receivable_lists_category_id, options_from_collection_for_select(@category, :id, :category), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
          <%= select_tag :receivable_lists_technique_id, options_from_collection_for_select(@technique, :id, :technique), {:class => 'form-control col-lg-5 select-id', :include_blank => true} %>
        </div>
        <div class="form-group row">
          <%= label_tag :receivable_lists, '体裁：', :class => 'col-form-label col-lg-3 text-right text-primary' %>
          <%= select_tag :receivable_lists_format_id, options_from_collection_for_select(@format, :id, :format), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
          <%= label_tag :receivable_lists, ':', :class => 'col-form-label col-lg-2 text-right text-primary' %>
          <input class="btn btn-primary col-lg-3 col-lg-offset-1" id="receivable_lists_search" type="button" value="検索">
        </div>
      </div>
      <div class="col-lg-2">

      </div>
      <div class="col-lg-2">
        <div class="form-group row">
          <table id = "receivable_list_sum" class="table table-sm table-bordered">
            <thead>
              <tr class="table-primary">
                <th class="text-primary">作品数</th>
                <th class="text-primary">合計　　　</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="text-right"></td>
                <td class="text-right"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-lg-12">
        <table id="receivable_list"></table>
      </div>
      <div class="col-lg-4">
<p></P>
        <div class="form-group row">
          <%= label_tag :receivable_lists,'並び替え：', :class => 'col-form-label col-lg-3 text-right text-primary' %>
          <%= select_tag :sort1, options_from_collection_for_select(@sort, :sort_key, :sort), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
          <%= select_tag :sort2, options_from_collection_for_select(@sort, :sort_key, :sort), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
          <%= select_tag :sort3, options_from_collection_for_select(@sort, :sort_key, :sort), {:class => 'form-control col-lg-3 select-id', :include_blank => true} %>
        </div>
      </div>
      <div class="col-lg-2">
      </div>
      <div class="col-lg-6">
<p></p>
        <input class="btn btn-primary" id="receivable_list_seach" type="button" value="　検索条件　">
        <input class="btn btn-primary" id="receivable_list_artwork" type="button" value="　作品詳細　">
        <input class="btn btn-primary" id="purcahse_list_print" type="button" value="　印　刷　">
        <input class="btn btn-primary" id="receivable_list_close" type="button" value="　閉じる　" onClick="window.close()">
      </div>
    </div>
  </div>
<% end %>
